<% provide(:title, 'Jose L. Ortiz') %>

<h1>Jose L. Ortiz</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout<th>
    </tr>
  </thead>

  <tbody>
    <% @jose_l_ortiz_entries.each do |jose_l_ortiz_entry| %>
      <tr>
        <td><%= jose_l_ortiz_entry.date %></td>
        <td><%= jose_l_ortiz_entry.race %></td>
        <td><%= jose_l_ortiz_entry.jockey %></td>
        <% if jose_l_ortiz_entry.jockey == jose_l_ortiz_entry.race_winner.winner %>
        <td><%= jose_l_ortiz_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>