<% provide(:title, 'Jose Lezcano') %>

<h1>Jose Lezcano</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout<th>
    </tr>
  </thead>

  <tbody>
    <% @jose_lezcano_entries.each do |jose_lezcano_entry| %>
      <tr>
        <td><%= jose_lezcano_entry.date %></td>
        <td><%= jose_lezcano_entry.race %></td>
        <td><%= jose_lezcano_entry.jockey %></td>
       <% if jose_lezcano_entry.jockey == jose_lezcano_entry.race_winner.winner %>
        <td><%= jose_lezcano_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>