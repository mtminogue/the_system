<% provide(:title, 'Luis Saez') %>

<h1>Luis Saez</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout</th>
    </tr>
  </thead>

  <tbody>
    <% @luis_saez_entries.each do |luis_saez_entry| %>
      <tr>
        <td><%= luis_saez_entry.date %></td>
        <td><%= luis_saez_entry.race %></td>
        <td><%= luis_saez_entry.jockey %></td>
        <% if luis_saez_entry.jockey == luis_saez_entry.race_winner.winner %>
        <td><%= luis_saez_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>