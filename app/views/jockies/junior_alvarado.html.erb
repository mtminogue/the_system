<% provide(:title, 'Junior Alvarado') %>

<h1>Junior Alvarado</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout<th>
    </tr>
  </thead>

  <tbody>
    <% @junior_alvarado_entries.each do |junior_alvarado_entry| %>
      <tr>
        <td><%= junior_alvarado_entry.date %></td>
        <td><%= junior_alvarado_entry.race %></td>
        <td><%= junior_alvarado_entry.jockey %></td>
        <% if junior_alvarado_entry.jockey == junior_alvarado_entry.race_winner.winner %>
        <td><%= junior_alvarado_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>