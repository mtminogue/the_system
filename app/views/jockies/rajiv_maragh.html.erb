<% provide(:title, 'Rajiv Maragh') %>

<h1>Rajiv Maragh</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout</th>
    </tr>
  </thead>

  <tbody>
    <% @rajiv_maragh_entries.each do |rajiv_maragh_entry| %>
      <tr>
        <td><%= rajiv_maragh_entry.date %></td>
        <td><%= rajiv_maragh_entry.race %></td>
        <td><%= rajiv_maragh_entry.jockey %></td>
        <% if rajiv_maragh_entry.jockey == rajiv_maragh_entry.race_winner.winner %>
        <td><%= rajiv_maragh_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>