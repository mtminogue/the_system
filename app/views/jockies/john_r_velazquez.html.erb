<% provide(:title, 'John R. Velazquez') %>

<h1>John R. Velazquez</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout<th>
    </tr>
  </thead>

  <tbody>
    <% @john_r_velazquez_entries.each do |john_r_velazquez_entry| %>
      <tr>
        <td><%= john_r_velazquez_entry.date %></td>
        <td><%= john_r_velazquez_entry.race %></td>
        <td><%= john_r_velazquez_entry.jockey %></td>
        <% if john_r_velazquez_entry.jockey == john_r_velazquez_entry.race_winner.winner %>
        <td><%= john_r_velazquez_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>