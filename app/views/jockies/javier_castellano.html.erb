<% provide(:title, 'Javier Castellano') %>

<h1>Javier Castellano</h1>
<%= render "race_stats" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Race</th>
      <th>Jockey</th>
      <th>Payout</th>
    </tr>
  </thead>

  <tbody>
    <% @javier_castellano_entries.each do |javier_castellano_entry| %>
      <tr>
        <td><%= javier_castellano_entry.date %></td>
        <td><%= javier_castellano_entry.race %></td>
        <td><%= javier_castellano_entry.jockey %></td>
        <% if javier_castellano_entry.jockey == javier_castellano_entry.race_winner.winner %>
        <td><%= javier_castellano_entry.race_winner.payout %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>